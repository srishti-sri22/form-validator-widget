{
  "name": "srishti-form-validator-widget",
  "version": "1.0.3",
  "description": "A beautiful, themeable form validation widget for React with TypeScript support",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "style": "dist/styles/style.css",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./dist/styles/style.css": "./dist/styles/style.css"
  },

  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc  && vite build",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },

  "keywords": [
    "react",
    "form",
    "validation",
    "form-validation",
    "react-form",
    "typescript",
    "form-widget",
    "validator",
    "react-validation",
    "form-builder"
  ],
  "author": "Srishti Srivastava",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/srishti-sri22/form-validator-widget"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^5.1.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0",
    "vite-plugin-static-copy": "^3.1.4"
  }
}
